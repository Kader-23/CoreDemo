@using EntityLayer.Concrete
@model List<Message2>

@{
	ViewData["Title"] = "InBox";
	Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1 style=" text-align:center">Gelen Kutusu</h1>
<table class="table table-dark cellspacing="1" style="text-align:center">

	<tr style=" color:#e672cb">
		<th>#</th>
		<th>Konu</th>
		<th>Gönderen</th>
		<th>Tarih</th>
		<th>Mesajı Aç</th>
		
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<th>@item.MessageId</th>
			<td>@item.Subject</td>
			<td>@item.SenderUser.WriterName</td>
			<td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
			<td><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-warning" style=" color: chocolate">Mesajı Aç</a></td>

		</tr>
	}
</table>

<br />
<a href="/Blog/BlogAdd/" class="btn btn-info"> Yeni Mesaj Oluştur </a>
