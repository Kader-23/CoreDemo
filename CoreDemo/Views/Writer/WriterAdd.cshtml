@model CoreDemo.Models.AddProfileImage

@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">

	<div class="col-12 grid-margin stretch-card" style=" background-color:blueviolet">
		<div class="card" style="border-radius:0px 100px">
			<div class="card-body">
				<h4 class="card-title" style="text-align:center">Yazar Profil Bilgileri Düzenleme</h4>
				<br />
				@Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })
			<div class="forms-sample">
				<div class="form-group">
					<label for="exampleInputName1" style="color:blueviolet">Yazar Ad Soyad</label>
					@Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
					@Html.ValidationMessageFor(x => x.WriterName, null, new { @class = "text-danger" })
				</div>
				<div class="form-group">
					<label for="exampleInputEmail3" style="color:blueviolet">Mail Adresi</label>
					@Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
					@Html.ValidationMessageFor(x => x.WriterMail, null, new { @class = "text-danger" })

				</div>

				<div class="form-group">
					<label for="exampleInputPassword4" style="color:blueviolet">Şifre</label>
					@Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
					@Html.ValidationMessageFor(x => x.WriterPassword, null, new { @class = "text-danger" })

				</div>
				
			<div class="form-group">
				<label style="color:blueviolet">Yazar Görsel</label>

				<input type="file" name="WriterImage" style="margin:0px 0px 0px 500px" />
				@Html.ValidationMessageFor(x => x.WriterImage, null, new { @class = "text-danger" })

				@*<input type="file" name="img[]" class="file-upload-default">
		<div class="input-group col-xs-12">
			<input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
			<span class="input-group-append">
				<button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
			</span>
		</div>*@
			</div>
				<br/>
				<div class="form-group">
					<label for="exampleTextarea1" style="color:blueviolet">Yazar Hakkında</label>
					@Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control" })
					@Html.ValidationMessageFor(x => x.WriterAbout, null, new { @class = "text-danger" })
				</div>
				<button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
				<button class="btn btn-light">İptal</button>
			</div>
			</div>
		</div>
	</div>
</form>

